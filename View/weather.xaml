<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="weatherapp.View.weather">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Location" x:Name="label_Location"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Enter Location" x:Name="entry_Name"/>
            <Button x:Name="GetWeather" Text="Get Weather" Clicked="GetWeather_Clicked"/>
            <Image x:Name="Icon" Source="" Margin="0,80,0,0" IsVisible="False"/>

        </StackLayout> 
    </ContentPage.Content>
</ContentPage>