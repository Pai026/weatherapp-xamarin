<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="overlay1.jpg"
             x:Class="weatherapp.View.weather">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Image Source="weather.png" WidthRequest="35"/>
            <Label Text="Weather App" VerticalOptions="Center"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <Grid  VerticalOptions="StartAndExpand">
        
        
        <!--<Image Source="overlay1.jpg" 
                 Aspect="Fill"/>
        -->
        <StackLayout Orientation="Vertical" Margin="0,100" HorizontalOptions="Center" VerticalOptions="Center">

            <Entry Placeholder="Enter Location" x:Name="entry_Name" HorizontalOptions="Center" />
            
            <Button x:Name="GetWeather" Text="Get Weather" Clicked="GetWeather_Clicked" 
                     HorizontalOptions="Center"/>

            
        </StackLayout>
        
            
        


    </Grid> 
</ContentPage>